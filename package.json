{
  "name": "task-manager-mcp-server",
  "version": "1.0.0",
  "description": "Task Manager MCP Server - TypeScript implementation with standard MCP SDK",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "task-manager-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "task-manager",
    "ai",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "better-sqlite3": "^12.4.1",
    "fs-extra": "^11.2.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
